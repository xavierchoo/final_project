<%  random_number = Random.new
    page = random_number.rand(0..3)
    link = @articles[14].image
    link2 = @articles[15].image
    link3 = @articles[18].image
    time = @articles[14].created_at
    time2 = @articles[15].created_at
    time3 = @articles[18].created_at
    time_formatted = time.strftime("%B") + " " + time.strftime("%d")
