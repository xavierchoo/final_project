<%= link_to "Sign in with Google", "/auth/google_oauth2" %></br>

<%  random_number = Random.new
    page = random_number.rand(0..3)
    link = @articles[1].image
    link2 = @articles[15].image
    link3 = @articles[18].image
    time = @articles[14].created_at
    time2 = @articles[15].created_at
    time3 = @articles[18].created_at
    time_formatted = time.strftime("%B") + " " + time.strftime("%d")
    time_formatted2 = time2.strftime("%B") + " " + time2.strftime("%d")
    time_formatted3 = time3.strftime("%B") + " " + time3.strftime("%d")
%>



<div class="jumbotron jumbotron-fluid"  style="background-image: url(<%= link %>)">

   <span> <%=@articles[14].description %></span>
</div>

<hr class="index-hr">

<div class="container">
  <div class="row mb-2 ">
  <div class="col-md-12 editors-choice">
    <p>Editor's choice</p>
    <div class="card flex-md-row mb-4 box-shadow h-md-250 first-250">
      <div class="card-body d-flex flex-column align-items-start second-flex">
        <strong class="d-inline-block mb-2 text-primary"><%= @articles[1].category %></strong>
        <h3 class="mb-0">
          <%= link_to "Featured post",article_page_path(link: @articles[1].link , article_id: @articles[1].id , source: @articles[1].name), class: "text-dark"%>
        </h3>
        <div class="mb-1 text-muted"><%= time_formatted %></div>
        <p class="card-text mb-auto"><%=@articles[1].description %></p>
        <a href="#">Continue reading</a>
      </div>
      <img class="card-img-right flex-auto d-none d-lg-block card-img-right-flex" src="<%= link %>" alt="Card image cap">
    </div>
  </div>
</div>
</div>


<div class="container">
  <div class="row mb-2">
  <div class="col-md-6">
    <div class="card flex-md-row mb-6 box-shadow h-md-250">
      <div class="card-body d-flex flex-column align-items-start third-flex">
        <strong class="d-inline-block mb-2 text-primary"><%= @articles[15].category %></strong>
        <div class="mb-1 text-muted"><%= time_formatted2 %></div>
        <%= link_to (@articles[15].description).first(100),article_page_path(link: @articles[15].link , article_id: @articles[15].id , source: @articles[15].name), class: "card-text mb-auto card-text-custom text-dark" %>
      </div>
      <img class="card-img-right-2 flex-auto d-none d-lg-block" src="<%= link2 %>" alt="Card image cap">
    </div>
  </div>
  <div class="col-md-6">
    <div class="card flex-md-row mb-6 box-shadow h-md-250">
      <div class="card-body d-flex flex-column align-items-start third-flex">
        <strong class="d-inline-block mb-2 text-success"><%= @articles[18].category %></strong>
        <div class="mb-1 text-muted"><%= time_formatted3 %></div>
        <%= link_to (@articles[18].description).first(100),article_page_path(link: @articles[18].link , article_id: @articles[18].id , source: @articles[18].name), class: "card-text mb-auto card-text-custom text-dark" %>
      </div>
      <img class="card-img-right-2 flex-auto d-none d-lg-block" src="<%= link3 %>" alt="Card image cap">
    </div>
  </div>
</div>
</div>


