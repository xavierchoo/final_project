<!DOCTYPE html>
<html>
  <head>
    <title>FinalProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% if signed_in? %>
  <% if current_user.admin %>
  <%= button_to "Admin's page", admins_path, method: :get %>
  <% else %>
  <%= button_to "User's page", user_path(current_user.id), method: :get %>
  <% end %>
  <% end %>
    <%= button_to "Home", root_path, method: :get %>
    <%= button_to "Sign in", sign_in_path, method: :get %>
    <%= button_to "Sign out", sign_out_path, method: :delete %>
    <%= link_to "Make Payment", braintree_new_path %>
    <%= yield %>
  </body>
</html>
