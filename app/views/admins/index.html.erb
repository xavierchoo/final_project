<% @index.each do |u| %>
    <%= u.name %></br>
    <%= u.description %></br>
    <% if u.urlToImage.present? %>
        <%= image_tag u.urlToImage %></br>
    <% else %>
    <%end%>
    <%= link = u.url %></br>    
    <%= link_to '<button type="button">Read the article</button>'.html_safe, show_path(link: u.url ,image: u.urlToImage) %></br>
    <%= link_to '<button type="button">Add to article</button>'.html_safe, root_path(name: u.name, description: u.description,link: u.url ,image: u.urlToImage) %></br></br>